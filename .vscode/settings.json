{
  // Node.js設定
  "node.defaultInterpreter": "node",
  "npm.packageManager": "npm",
  "eslint.enable": true,
  "eslint.workingDirectories": [
    "."
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Python設定
  "python.defaultInterpreter": "/usr/bin/python3",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoFormatStrings": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  // 言語別フォーマット設定
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 2
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.tabSize": 2
  },
  // MCP (Model Context Protocol) 設定
  "github.copilot.chat.experimental.mcp.enabled": true,
  "github.copilot.chat.experimental.mcp.configFile": ".vscode/mcp.json",
  // Copilot詳細設定
  "github.copilot.enable": {
    "*": true,
    "javascript": true,
    "typescript": true,
    "python": true,
    "yaml": true,
    "json": true,
    "markdown": true,
    "dockerfile": true,
    "shell": true,
    "plaintext": false,
    "log": false
  },
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.acceptSuggestionOnEnter": "on",
  "github.copilot.chat.enable": true,
  // エディタ統合設定
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  // ファイル監視設定
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/dist/**": true,
    "**/build/**": true
  },
  // 検索除外設定
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/.venv": true,
    "**/venv": true,
    "**/dist": true,
    "**/build": true
  },
  // タスク設定
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cwd": "${workspaceFolder}",
  // TypeScript設定
  "typescript.preferences.quoteStyle": "single",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  //一般的なエディタ設定
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true
}